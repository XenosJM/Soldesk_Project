		</select> -->

	<select id="selectTotalCount" resultType="Integer">
		SELECT COUNT(*)
		TOTAL_COUNT FROM BOARD
		 <where>
            CATEGORY_ID = #{categoryId}
            <choose>
            <when test="type == 'title'">
				and BOARD_TITLE LIKE '%${keyword}%'
			</when>
			<when test="type == 'content'">
				and BOARD_CONTENT LIKE '%${keyword}%'
			</when>
			</choose>
         </where>
	</select>

