<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soldesk.ex01.persistence.CategoriMapper">
	<resultMap type="com.soldesk.ex01.domain.CategoriVO"
		id="CategoriResultMap">
		<id property="categoriId" column="CATEGORI_ID" />
		<result property="categoriTitle" column="CATEGORI_TITLE" />
	</resultMap>
	<insert id="insert"> 
	INSERT INTO CATEGORI 
	VALUES (CATEGORI_SEQ.NEXTVAL,#{categoriTitle})
	</insert>
	<select id="selectCategoriList" resultMap="categoriResultMap"> 
		SELECT * FROM CATEGORI
	</select>
	<select id="selectCategoriTitle" resultType="categoriResultMap"> 
		SELECT * FROM CATEGORI
		WHERE CATEGORI_TITLE = #{categoriTitle} 
	</select>
	<update id="updateCategoriTitle"> 
		UPDATE CATEGORI SET CATEGORI_
		TITLE =	#{memberPassword} 
		WHERE CATEGORI_ID = #{categoriId}
	</update>
	<delete id="delete"> 
		DELETE FROM CATEGORI WHERE CATEGORI_ID = #{categoriId}
	</delete>
</mapper>