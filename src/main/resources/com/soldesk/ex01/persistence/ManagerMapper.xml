<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soldesk.ex01.persistence.ManagerMapper">
	<resultMap type="com.soldesk.ex01.domain.ManagerVO" id="ManagerResultMap">
		<id property="managerId" column="MANAGER_ID"/>
		<result property="memberId" column="MEMBER_ID"/>
		<result property="categoriId" column="CATEGORI_ID"/>	
	</resultMap>
	<!-- 관리자 등록 -->
	<insert id="insert">
		INSERT INTO MANAGER (MANGER_ID, MEMBER_ID, CATEGOTI_ID)
		VALUES (MANAGER_SEQ.NEXTVAL, #{memberId}, #{categoriId)) 
	</insert>
	<!-- 관리자 상세 검색 -->
	<select id="selectByManagerId" resultMap="ManagerResultMap">
		SELECT * FROM MANAGER WHERE MANAGER_ID = #{managerId}
	</select>
	<!-- 관리자 전체 검색 -->
	<select id="selectAllManager" resultType="Integer">
		SELECT MANAGER_ID FROM MANAGER
	</select>
	<!-- 관리자 변경 -->
	<update id="update">
		UPDATE MANAGER SET MEMBER_ID = #{memberId} WHERE MANAGER_ID = #{managerId}
	</update>
	<!-- 관리자 삭제 -->
	<delete id="delete">
		DELETE FROM MANAGER WHERE MANAGER_ID = #{managerId}
	</delete>
</mapper>
